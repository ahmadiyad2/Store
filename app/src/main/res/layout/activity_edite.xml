<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edite">





             <EditText
                 android:id="@+id/ED_1"
                 android:background="#FFFFFF"
                 android:layout_marginHorizontal="30dp"
                 android:layout_width="match_parent"
                 android:drawablePadding="4dp"
                 app:layout_constraintTop_toBottomOf="@id/addInfo"
                 android:hint="Enter yor name : "
                 android:layout_height="30dp"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginTop="70dp"
                 />


             <EditText
                 android:id="@+id/ED_2"
                 android:background="#FFFFFF"
                 android:layout_marginHorizontal="30dp"
                 android:layout_width="match_parent"
                 android:drawablePadding="4dp"
                 android:layout_height="30dp"
                 android:hint="Enter a titel jop :"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintTop_toBottomOf="@id/ED_1"
                 android:layout_marginTop="30dp"
                 />



             <EditText
                 android:id="@+id/ED_3"
                 android:background="#FFFFFF"
                 android:layout_marginHorizontal="30dp"
                 android:layout_width="match_parent"
                 android:drawablePadding="4dp"
                 android:layout_height="30dp"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:hint="Enter your discraption :"
                 app:layout_constraintTop_toBottomOf="@id/ED_2"
                 android:layout_marginTop="30dp"
                 />





       <Button
           android:id="@+id/save"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
           android:text="Save"/>


    <TextView
        android:id="@+id/addInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Add the information "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="85dp"
        android:textStyle="bold"
        android:textColor="@color/colorapp"
        android:textSize="18sp"/>



    <com.google.android.material.progressindicator.CircularProgressIndicator

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loding"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>