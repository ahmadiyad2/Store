<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfielCustamer">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:src="@drawable/ahmad"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Android Developer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/Username"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="ahmadiyad1212"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:textSize="9sp"/>

    <TextView
        android:id="@+id/discraption"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Android And IOS Divelober , and mobiel appliacton programer"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/Username"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/baseline_edit_24"/>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/discraption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:background="#BFBFBF"
        android:layout_marginTop="30dp"/>


    <TextView
        android:id="@+id/folweing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:text="Following"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginEnd="45dp"/>


    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/folweing"
        android:layout_marginTop="10dp"
        android:text="100 K"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginEnd="45dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>