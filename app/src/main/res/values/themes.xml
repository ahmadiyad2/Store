<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.onScreen" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#8020B5E4</item>
        <item name="colorOnPrimary">#00BCD4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0003DAC5</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#8020B5E4</item>
    </style>

    <style name="myThemes" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryVariant">#20B5E4</item>
        <item name="android:statusBarColor">#20B5E4</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimary">@color/colorapp</item>


    </style>


    <style name="myThemesSplace" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimary">@color/colorapp</item>


    </style>



    <style name="line">

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">1dp</item>


    </style>
    <!-- Base application theme. -->
    <style name="Base.myThemes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

</resources>